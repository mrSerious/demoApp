@model DemoApp.Models.Job 

@{ ViewData["Title"] = "Create"; }

<h2>Create</h2>

<form asp-controller="Job" asp-action="Create">
    <div class="form-horizontal">
        <h4>Job</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DueDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DueDate" class="form-control" type="date"/>
                <span asp-validation-for="DueDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AssignedTo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="AssignedTo" class="form-control" asp-items="ViewBag.UserId">
                    <option value="">-- Assign Job To?  --</option>
                </select>
                <span asp-validation-for="AssignedTo" class="text-danger" />
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-controller="User" asp-action="Index">Back to List</a>
</div>

@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }